{
  "version": "1.0.0",
  "title": "Load Test with K6",
  "description": "Load test using K6 to test dungeon solve endpoint",
  "tags": [
    "load",
    "k6",
    "performance"
  ],
  "configuration": {
    "app_url": {
      "type": "env",
      "key": "APP_URL",
      "default": "http://localhost:80"
    }
  },
  "steady-state-hypothesis": {
    "title": "Application responds normally with adequate performance",
    "probes": [
      {
        "name": "test-solve-endpoint-performance",
        "type": "probe",
        "provider": {
          "type": "http",
          "url": "${app_url}/dungeon/solve",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json"
          },
          "arguments": [[1,-3,3],[0,-2,0],[-3,-3,-3]]
        },
        "tolerance": {
          "type": "range",
          "range": [200, 299],
          "target": "status"
        }
      }
    ]
  },
  "method": [
    {
      "name": "load-test-dungeon-solve",
      "type": "action",
      "provider": {
        "type": "python",
        "module": "chaosk6.actions",
        "func": "run_script",
        "arguments": {
          "script_path": "experiments/load-test.js",
          "vus": 10,
          "duration": "30s"
        }
      }
    }
  ],
  "rollbacks": [
    {
      "name": "wait-for-load-test-to-complete",
      "type": "probe",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["15"]
      }
    }
  ]
}
