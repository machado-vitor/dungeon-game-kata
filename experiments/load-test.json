{
  "version": "1.0.0",
  "title": "Load Test with K6",
  "description": "Load test using K6 to test dungeon solve endpoint",
  "tags": [
    "load",
    "k6",
    "performance"
  ],
  "configuration": {
    "app_url": {
      "type": "env",
      "key": "APP_URL",
      "default": "http://localhost:80"
    }
  },
  "steady-state-hypothesis": {
    "title": "Application meets SLA requirements and responds normally",
    "probes": [
      {
        "name": "sla-compliance-check",
        "type": "probe",
        "provider": {
          "type": "process",
          "path": "k6",
          "arguments": ["run", "--quiet", "experiments/sla_check_probe.js"]
        },
        "tolerance": 0
      }
    ]
  },
  "method": [
    {
      "name": "load-test-dungeon-solve",
      "type": "action",
      "provider": {
        "type": "python",
        "module": "chaosk6.actions",
        "func": "run_script",
        "arguments": {
          "script_path": "experiments/load-test.js",
          "vus": 10,
          "duration": "30s"
        }
      }
    }
  ],
  "rollbacks": [
    {
      "name": "wait-for-load-test-to-complete",
      "type": "probe",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["15"]
      }
    }
  ]
}
