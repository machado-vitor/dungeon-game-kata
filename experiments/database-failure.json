{
  "version": "1.0.0",
  "title": "Database Connection Failure",
  "description": "Test application resilience when database becomes unavailable",
  "tags": [
    "database",
    "infrastructure",
    "availability"
  ],
  "configuration": {
    "app_url": {
      "type": "env",
      "key": "APP_URL",
      "default": "http://localhost:80"
    }
  },
  "steady-state-hypothesis": {
    "title": "Application meets SLA requirements and responds normally",
    "probes": [
      {
        "name": "sla-compliance-check",
        "type": "probe",
        "provider": {
          "type": "process",
          "path": "k6",
          "arguments": ["run", "--quiet", "experiments/sla_check_probe.js"]
        },
        "tolerance": 0
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "stop-database-container",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": ["stop", "dungeon-game-kata-db-1"]
      },
      "pauses": {
        "after": 5
      }
    },
    {
      "type": "probe",
      "name": "verify-database-is-down",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": [
          "ps",
          "--filter",
          "name=dungeon-game-kata-db-1",
          "--format",
          "table {{.Names}}\t{{.Status}}"
        ]
      },
      "tolerance": {
        "type": "regex",
        "pattern": "Exited"
      }
    }
  ],
  "rollbacks": [
    {
      "type": "action",
      "name": "restart-database-container",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": ["start", "dungeon-game-kata-db-1"]
      }
    },
    {
      "type": "probe",
      "name": "wait-for-database-recovery",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["10"]
      }
    }
  ]
}
