{
  "version": "1.0.0",
  "title": "Container Pause Chaos Experiment",
  "description": "Randomly pause application containers",
  "tags": [
    "container",
    "pause",
    "pumba",
    "infrastructure"
  ],
  "configuration": {
    "app_url": {
      "type": "env",
      "key": "app_url",
      "default": "http://localhost:80"
    },
    "target_pattern": {
      "type": "env",
      "key": "TARGET_PATTERN",
      "default": "re2:^dungeon-game-kata-app(1|2|3)-\\d+$"
    },
    "pause_duration": {
      "type": "env",
      "key": "PAUSE_DURATION",
      "default": "40s"
    }
  },
  "steady-state-hypothesis": {
    "title": "Application meets SLA requirements and responds normally",
    "probes": [
      {
        "name": "sla-compliance-check",
        "type": "probe",
        "provider": {
          "type": "process",
          "path": "k6",
          "arguments": ["run", "--quiet", "experiments/sla_check_probe.js"]
        },
        "tolerance": 0
      }
    ]
  },
  "method": [
    {
      "name": "pause-random-app-container",
      "type": "action",
      "provider": {
        "type": "process",
        "path": "bash",
        "arguments": [
          "-c",
          "pumba --log-level info --random pause --duration ${pause_duration} --limit 1 '${target_pattern}' > /tmp/pumba.log 2>&1 &"
        ]
      },
      "pauses": {
        "after": 7
      }
    },
    {
      "name": "verify-container-paused",
      "type": "probe",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": ["ps", "--filter", "status=paused", "--format", "{{.Names}}"]
      },
      "tolerance": {
        "type": "regex",
        "target": "stdout",
        "pattern": "dungeon-game-kata-app"
      }
    }
  ],
  "rollbacks": [
    {
      "name": "wait-for-container-to-resume",
      "type": "probe",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["35"]
      }
    }
  ]
}
