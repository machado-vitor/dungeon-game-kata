{
  "version": "1.0.0",
  "title": "Memory Exhaustion",
  "description": "Test application resilience when memory is fully exhausted",
  "tags": [
    "memory",
    "infrastructure",
    "availability"
  ],
  "configuration": {
    "app_url": {
      "type": "env",
      "key": "APP_URL",
      "default": "http://localhost:80"
    }
  },
  "steady-state-hypothesis": {
    "title": "Application is healthy and responding",
    "probes": [
      {
        "name": "dungeon-solve-endpoint-available",
        "type": "probe",
        "provider": {
          "type": "http",
          "url": "${app_url}/dungeon/solve",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json"
          },
          "arguments": [[1, 2, -1],[3, 4, -2],[5, 6, -3]]
        },
        "tolerance": {
          "type": "range",
          "range": [200, 299],
          "target": "status"
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "consume-memory-app1",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": [
          "exec", "-d",
          "dungeon-game-kata-app1-1",
          "stress-ng", "--vm", "1", "--vm-bytes", "90%", "--timeout", "120s"
        ]
      }
    },
    {
      "type": "action",
      "name": "consume-memory-app2",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": [
          "exec", "-d",
          "dungeon-game-kata-app2-1",
          "stress-ng", "--vm", "1", "--vm-bytes", "90%", "--timeout", "120s"
        ]
      }
    },
    {
      "type": "action",
      "name": "consume-memory-app3",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": [
          "exec", "-d",
          "dungeon-game-kata-app3-1",
          "stress-ng", "--vm", "1", "--vm-bytes", "90%", "--timeout", "120s"
        ]
      },
      "pauses": {
        "after": 5
      }
    }
  ],
  "rollbacks": [
    {
      "type": "action",
      "name": "stop-stress-in-app1",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": [
          "exec",
          "dungeon-game-kata-app1-1",
          "pkill", "-f", "stress-ng"
        ]
      }
    },
    {
      "type": "action",
      "name": "stop-stress-in-app2",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": [
          "exec",
          "dungeon-game-kata-app2-1",
          "pkill", "-f", "stress-ng"
        ]
      }
    },
    {
      "type": "action",
      "name": "stop-stress-in-app3",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": [
          "exec",
          "dungeon-game-kata-app3-1",
          "pkill", "-f", "stress-ng"
        ]
      }
    },
    {
      "type": "probe",
      "name": "wait-for-memory-recovery",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["10"]
      }
    }
  ]
}
