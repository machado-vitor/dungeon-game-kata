{
  "version": "1.0.0",
  "title": "Network Packet Loss Chaos Experiment",
  "description": "Introduce network packet loss to test resilience to unreliable network conditions",
  "tags": [
    "network",
    "packet-loss",
    "reliability",
    "netem",
    "pumba"
  ],
  "configuration": {
    "app_url": {
      "type": "env",
      "key": "app_url",
      "default": "http://localhost:80"
    },
    "target_pattern": {
      "type": "env",
      "key": "TARGET_PATTERN",
      "default": "re2:^dungeon-game-kata-app(1|2|3)-\\d+$"
    },
    "loss_duration": {
      "type": "env",
      "key": "LOSS_DURATION",
      "default": "25s"
    },
    "loss_percent": {
      "type": "env",
      "key": "LOSS_PERCENT",
      "default": "5"
    },
    "correlation": {
      "type": "env",
      "key": "CORRELATION",
      "default": "25"
    }
  },
  "steady-state-hypothesis": {
    "title": "Application responds normally with adequate performance",
    "probes": [
      {
        "name": "test-solve-endpoint-performance",
        "type": "probe",
        "provider": {
          "type": "http",
          "url": "${app_url}/dungeon/solve",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json"
          },
          "arguments": [[1,-3,3],[0,-2,0],[-3,-3,-3]]
        },
        "tolerance": {
          "type": "range",
          "range": [200, 299],
          "target": "status"
        }
      }
    ]
  },
  "method": [
    {
      "name": "inject-network-packet-loss",
      "type": "action",
      "provider": {
        "type": "process",
        "path": "bash",
        "arguments": [
          "-c",
          "pumba --log-level info --random netem --duration ${loss_duration} loss --percent ${loss_percent} --correlation ${correlation} '${target_pattern}' > /tmp/pumba-packet-loss.log 2>&1 &"
        ]
      },
      "pauses": {
        "after": 5
      }
    }
  ],
  "rollbacks": [
    {
      "name": "wait-for-packet-loss-to-complete",
      "type": "probe",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["30"]
      }
    }
  ]
}

