{
  "version": "1.0.0",
  "title": "Network Delay with Jitter Chaos Experiment",
  "description": "Inject network delays with jitter to test application resilience using Pumba netem",
  "tags": [
    "network",
    "latency",
    "jitter",
    "netem",
    "pumba"
  ],
  "configuration": {
    "target_pattern": {
      "type": "env",
      "key": "TARGET_PATTERN",
      "default": "re2:^dungeon-game-kata-app(1|2|3)-\\d+$"
    },
    "delay_duration": {
      "type": "env",
      "key": "DELAY_DURATION",
      "default": "25s"
    },
    "delay_time": {
      "type": "env",
      "key": "DELAY_TIME",
      "default": "800"
    },
    "jitter": {
      "type": "env",
      "key": "JITTER",
      "default": "200"
    },
    "correlation": {
      "type": "env",
      "key": "CORRELATION",
      "default": "25"
    }
  },
  "steady-state-hypothesis": {
    "title": "Application containers are running and responding normally",
    "probes": [
      {
        "name": "check-app-containers-running",
        "type": "probe",
        "provider": {
          "type": "process",
          "path": "docker",
          "arguments": ["ps", "--filter", "label=chaos.target=apps", "--format", "{{.Names}}"]
        },
        "tolerance": {
          "type": "regex",
          "target": "stdout",
          "pattern": "dungeon-game-kata-app"
        }
      },
      {
        "name": "check-app-health",
        "type": "probe",
        "provider": {
          "type": "http",
          "url": "http://localhost:80/actuator/health"
        },
        "tolerance": {
          "type": "range",
          "range": [200, 299],
          "target": "status"
        }
      },
      {
        "name": "baseline-response-time",
        "type": "probe",
        "provider": {
          "type": "http",
          "url": "http://localhost:80/hello"
        },
        "tolerance": {
          "type": "range",
          "range": [200, 299],
          "target": "status"
        }
      }
    ]
  },
  "method": [
    {
      "name": "inject-network-delay-with-jitter",
      "type": "action",
      "provider": {
        "type": "process",
        "path": "bash",
        "arguments": [
          "-c",
          "pumba --log-level info --random netem --duration ${delay_duration} delay --time ${delay_time} --jitter ${jitter} --correlation ${correlation} '${target_pattern}' > /tmp/pumba-netem.log 2>&1 &"
        ]
      },
      "pauses": {
        "after": 3
      }
    },
    {
      "name": "verify-delay-injection",
      "type": "probe",
      "provider": {
        "type": "process",
        "path": "bash",
        "arguments": [
          "-c",
          "docker exec $(docker ps --filter 'label=chaos.target=apps' --format '{{.Names}}' | head -1) tc qdisc show | grep -q netem || echo 'No netem rules found'"
        ]
      },
      "tolerance": {
        "type": "regex",
        "target": "stdout",
        "pattern": ".*"
      }
    }
  ],
  "rollbacks": [
    {
      "name": "wait-for-netem-to-complete",
      "type": "probe",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["30"]
      }
    },
    {
      "name": "cleanup-netem-rules",
      "type": "action",
      "provider": {
        "type": "process",
        "path": "bash",
        "arguments": [
          "-c",
          "for container in $(docker ps --filter 'label=chaos.target=apps' --format '{{.Names}}'); do echo \"Cleaning netem rules for $container\"; docker exec \"$container\" tc qdisc del dev eth0 root 2>/dev/null || true; done"
        ]
      }
    },
    {
      "name": "verify-all-containers-running",
      "type": "probe",
      "provider": {
        "type": "process",
        "path": "bash",
        "arguments": [
          "-c",
          "docker ps --filter 'label=chaos.target=apps' --filter 'status=running' --format '{{.Names}}' | wc -l"
        ]
      },
      "tolerance": {
        "type": "range",
        "range": [3, 3],
        "target": "stdout"
      }
    },
    {
      "name": "wait-for-network-recovery",
      "type": "probe",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["5"]
      }
    },
    {
      "name": "verify-normal-response-times",
      "type": "probe",
      "provider": {
        "type": "http",
        "url": "http://localhost:80/hello"
      },
      "tolerance": {
        "type": "range",
        "range": [200, 299],
        "target": "status"
      }
    },
    {
      "name": "verify-application-health",
      "type": "probe",
      "provider": {
        "type": "http",
        "url": "http://localhost:80/actuator/health"
      },
      "tolerance": {
        "type": "range",
        "range": [200, 299],
        "target": "status"
      }
    }
  ]
}

