{
  "version": "1.0.0",
  "title": "Database Network Latency Chaos Experiment",
  "description": "Inject network delays on database port (5432) to test resilience to database latency",
  "tags": [
    "database",
    "latency",
    "postgres",
    "network",
    "netem",
    "pumba"
  ],
  "configuration": {
    "app_url": {
      "type": "env",
      "key": "app_url",
      "default": "http://localhost:80"
    },
    "target_pattern": {
      "type": "env",
      "key": "TARGET_PATTERN",
      "default": "re2:^dungeon-game-kata-app(1|2|3)-\\d+$"
    },
    "delay_duration": {
      "type": "env",
      "key": "DELAY_DURATION",
      "default": "25s"
    },
    "delay_time": {
      "type": "env",
      "key": "DELAY_TIME",
      "default": "500"
    },
    "jitter": {
      "type": "env",
      "key": "JITTER",
      "default": "100"
    },
    "correlation": {
      "type": "env",
      "key": "CORRELATION",
      "default": "20"
    }
  },
  "steady-state-hypothesis": {
    "title": "Application responds normally to requests despite database connectivity",
    "probes": [
      {
        "name": "test-solve-endpoint",
        "type": "probe",
        "provider": {
          "type": "http",
          "url": "${app_url}/dungeon/solve",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json"
          },
          "arguments": [[1, -3, 3], [0, -2, 0], [-3, -3, -3]]
        },
        "tolerance": {
          "type": "range",
          "range": [200, 299],
          "target": "status"
        }
      },
      {
        "name": "check-app-health",
        "type": "probe",
        "provider": {
          "type": "http",
          "url": "${app_url}/actuator/health"
        },
        "tolerance": {
          "type": "range",
          "range": [200, 299],
          "target": "status"
        }
      }
    ]
  },
  "method": [
    {
      "name": "inject-database-network-latency",
      "type": "action",
      "provider": {
        "type": "process",
        "path": "bash",
        "arguments": [
          "-c",
          "pumba --log-level info --random netem --duration ${delay_duration} --egress-port 5432 delay --time ${delay_time} --jitter ${jitter} --correlation ${correlation} '${target_pattern}' > /tmp/pumba-db-latency.log 2>&1 &"
        ]
      },
      "pauses": {
        "after": 5
      }
    }
  ],
  "rollbacks": [
    {
      "name": "wait-for-latency-to-complete",
      "type": "probe",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["30"]
      }
    }
  ]
}

